
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@model List<DoAn.Models.Model.Admin.HoaDonNhapModel>
<div class="container">
    <div class="danhsachsanpham">
        <div class="row">
            <div class="col-md-10"><h5>DANH SÁCH HÓA ĐƠN NHẬP</h5></div>
            <div class="col-md-2"><a href="/HoaDonNhapAdmin/CreateHDN" class="btn btn-primary">Thêm</a></div>
        </div>
        
        <hr />
        <br />
        <table id="bootstrap-data-table" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="5%">STT</th>
                    <th width="10%">Ngày nhập</th>
                    <th width="10%">Nhà cung cấp</th>
                    <th width="10%">Tổng tiền</th>
                    <th width="10%">Chiết khấu</th>
                    <th width="11%">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="5%" class="table-center">@item.STT</td>
                        <td width="10%" class="admin-spc-tensp"><span>@String.Format("{0:d/M/yyyy}", @item.NgayNhap)</span> </td>
                        <td width="15%">@item.TenNCC</td>
                        <td width="15%" class="table-center">@String.Format("{0:0,0}", @item.TongTien)đ</td>
                        @if (@item.ChietKhau == "00")
                        {
                            <td width="15%" class="table-center">0đ</td>
                        }
                        else
                        {
                            <td width="15%" class="table-center">@String.Format("{0:0,0}", @item.ChietKhau)đ</td>
                        }


                        <td width="11%" class="chucnang table-center">

                            <a href="/HoaDonNhapAdmin/XemChiTietHDN?mahoadon=@item.Id" class="btn btn-success">Xem chi tiết</a>
                        </td>


                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>




